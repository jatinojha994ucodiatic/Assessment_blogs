<div class="card m-2" style="width: 47%;">
  <div class="card-body">
    <h6 class="card-subtitle mb-2 text-muted"><%= article.user.email %></h6>
    <h5 class="card-title"><%= article.title %></h5>
    <p class="card-text"><%= truncate(article.body, length: 80) %></p>
    <% if can? :read, article %>
      <%= link_to "Show", article_path(article), class: "card-link" %>
    <% else %>
      <% if can? :manage, article %>
        <%= link_to "Delete", article_path(article), data: { "turbo": true, "turbo-method": :delete, "turbo-confirm": "Are you sure?"}, class: "text-danger" %>
        <%= link_to "Edit", edit_article_path(article), class: "card-link" %>
      <% end %>
      <%= link_to "Back to articles", :back, class: "card-link" %>
    <% end %>
  </div>
</div>