<div class="row mt-5">
  <div class="card">
    <h2 class="card-header">Create Comment</h2>
    <div class="card-body">          
      <%= form_with(model: [article, comment]) do |form| %>
        <div class="form-group">
          <%= form.label :comment, class: "form-label" %>
          <%= form.text_area :comment, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit class: "btn btn-sm btn-primary my-3" %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-body-secondary">
    </div>
  </div>
</div>