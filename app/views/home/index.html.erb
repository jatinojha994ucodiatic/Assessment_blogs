<h1>Home</h1>
<% link_to 'Users', registrations_list_path %>
<% if current_user != true_user %>
  You (<%= true_user.email %>) are signed in as <%= current_user.email %>
  <%= button_to "Back to admin", stop_impersonating_users_path, method: :post, data: {turbo: false} %>
<% end %>
<div class="card">
  <%= link_to 'Create new', new_article_path, class: "btn btn-sm btn-secondary" %>
  <div class="card-body">
    <div class="d-flex flex-row justify-content-between flex-wrap">
      <%= render @articles %>
    </div>
  </div>
</div>
